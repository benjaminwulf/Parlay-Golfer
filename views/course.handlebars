<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <div class="card mt-4">
        <div class="card-body">
          <h5 class="card-title">Course</h5>
          <p>
            <strong>ID</strong>: {{course.id}}</p>
          <p>
          <p>
            <strong>Text</strong>: {{course.text}}</p>
          <p>
            <strong>Description:</strong> {{course.description}}</p>
            <a href="/">← Back To Home</a>
        </div>
        <h3>Filler</h3>
        
        {{!-- BWW --}}
        <form>
            <select>
             {{#each course.courses}}
               <option>
                 {{this.id}}
                 {{this.text}}
               </option>
              {{/each}}
            </select>

        </form>
        {{!-- BWW --}}

        <ul id="example-list" class="list-group">
          {{#each course.courses}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="course/{{this.id}}">{{this.text}}</a>
            <button class="btn btn-danger float-right delete">ｘ</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>
