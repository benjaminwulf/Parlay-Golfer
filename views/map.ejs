    <script>
        $(document).ready(function () {
            var currentHole = 0;
            $("#white").html("White: " + holes[currentHole].white);
            $("#hole-num").html(holes[currentHole].name)
            $("#image").attr("src", holes[currentHole].photo)

            $('#next-hole').on('click', function () {
                currentHole++;
                $("#white").html("White: " + holes[currentHole].white);
                $("#hole-num").html(holes[currentHole].name);
                $("#image").attr("src", holes[currentHole].photo)
            })

            $('#previous-hole').on('click', function () {
                currentHole--;
                $("#white").html("White: " + holes[currentHole].white);
                $("#hole-num").html(holes[currentHole].name);
                $("#image").attr("src", holes[currentHole].photo)
            })

        });
    </script>

